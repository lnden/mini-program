<!--components/swiper/swiper.wxml-->
<view class="swiper">
  <swiper 
    indicator-dots="{{indicatorDots}}" 
    indicator-color="{{indicatorColor}}" 
    indicator-active-color="{{indicatorActiveColor}}" 
    autoplay="{{autoplay}}" 
    interval="{{interval}}" 
    duration="{{duration}}" 
    vertical="{{vertical}}">
    <block wx:for="{{background}}" wx:key="*this">
      <swiper-item>
        <view class="swiper-item {{item}}"></view>
      </swiper-item>
    </block>
  </swiper>
</view>
