/* template/alphaSearch/alphaSearch.wxss */

.alphaSearch {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 110;
  width: 100%;
  height: 100%;
  background: #fff;
  overflow: auto;
}

.slider-nav {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 110;
  width: 50rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #008ed3;
  text-align: center;
  line-height: 36rpx;
  text-transform: uppercase;
  background: #fff;
}

.alphaSearch .title {
  height: 70rpx;
  background: #f5f5f5;
  font-size: 30rpx;
  color: #999;
  line-height: 70rpx;
  text-transform: uppercase;
  padding: 0 30rpx;
}

.alphaSearch .con > view {
  height: 88rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 88rpx;
}

.alphaSearch .slider-nav {
  position: absolute;
  right: 0;
  top: 0;
  background: #fff;
  min-height: 250px;
  padding: 0 16rpx;
}

.alphaSearch .cancel {
  position: fixed;
  top: 0;
  right: 80rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #333;
}
